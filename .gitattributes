# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text diff=python
*.pyx text diff=python
*.pyi text diff=python

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.exe binary

# Binary files
*.dll binary
*.exe binary
*.so binary
*.dylib binary
*.jar binary
*.zip binary
*.tar.gz binary

# Docker
Dockerfile text diff=docker
.dockerignore text

# Documentation
*.md text diff=markdown
*.pdx binary
*.pdf binary

# Configuration files
*.json text
*.yml text
*.yaml text
*.toml text
*.xml text
*.properties text

# Git files
.gitignore text
.gitattributes text
.editorconfig text

# Media
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text
